<h2>Movies</h2>
<b><%= flash[:notice] %></b>
<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Category title</th>
    <th>Rating average</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @category.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.title %></td>
        <td><%= movie.category.title %></td>
        <td><%= movie.ratings.average(:star) %></td>
        <% if user_signed_in? %>
          <td>
            <%= render 'rate_form', movie: movie %>
          </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<h2>My movies</h2>
<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Category title</th>
    <th>Rating</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @my_movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= movie.title %></td>
        <td><%= movie.category.title %></td>
        <td><%= movie.ratings.average(:star) %></td>
        <td><%= link_to 'Изменить', edit_movie_path(movie) %></td>
        <td><%= link_to 'Удалить', movie_path(movie), 
                                   method: :delete, 
                                   data: { confirm: 'Are u sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>